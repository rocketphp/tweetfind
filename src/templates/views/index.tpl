<!doctype html>
<html class="no-js" lang="">    
    [@head]
    <body> 
        <div class="row">
            <div class="small-12 columns">

                <!-- Header -->
                <header>
                    <div id="header">
                        <div class="row">
                            <h1 class="clearfix">
                                <span class="show-for-small-only logo-small">
                                    <img src="img/logo-48.png" alt="TweetFind">
                                </span>
                                [@app_name]
                            </h1>
                            <h2>Search tweets using the form below:</h2> 
                        </div>
                    </div>
                </header>

                <!-- Main Content -->
                <div id="main-content">
                    <div class="row clearfix">
                        <div class="medium-5 show-for-medium-up columns">
                            [@picture]
                        </div>
                        <div class="small-12 medium-7 columns">
                            [@searchform]
                        </div>
                    </div>
                    <div class="row">
                        <div class="small-12 columns">
                            [@searchresults]
                        </div>
                    </div>
                </div>
            </div>
        </div>
        [@footer]
    </body>
</html>